@model IEnumerable<TeamWork.Models.EmployeeArticle>

@{
    ViewBag.Title = "ViewEmployeeArticles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Articles</h2>
@if (@ViewBag.NoArticle == null)
{
    <div class="alert alert-danger">@ViewBag.NoArticle</div>
}

    @foreach (var item in Model)
    {
        <div>
                <div align="center">
                    @Html.DisplayFor(modelItem => item.ArticleTitle)
                </div>

                <div>
                    @* @Html.DisplayFor(modelItem => item.ArticleBody)*@
                    @Html.Raw(item.ArticleBody)
                </div>
                <div>
                    <img src="~/Content/images/@item.Image" widht="600" height="400" />
                </div>
                <h5>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </h5>
                <div>
                    <h4>Comments</h4>
                    @item.Comments
                </div>
                <div>
                    @*@Html.ActionLink("Edit", "EditArticle", new { id = item.ArticleId })*@
                    <a href="EditArticle/@item.ArticleId" class="btn btn-primary"><i class="fa fa-pencil fa-fw" aria-hidden="true"></i>Edit</a>
                    <a href="DeleteArticle/@item.ArticleId" class="btn btn-danger"><i class="fa fa-trash fa-fw" aria-hidden="true"></i>Delete</a>
                </div>
        </div>
    }



