@model IEnumerable<TeamWork.Models.EmployeeGif>

@{
    ViewBag.Title = "ViewEmployeeGifs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-4 " style="margin:20px">
                <p><h4>PostedBy</h4> <h4><strong> @item.PostedBy</strong></h4></p>
                <img src="~/Content/images/gifs/@item.GifUrl" width="700" height="400" />
                <h4> <i class="fa fa-clock fa-2x">    </i> @item.DateCreated</h4>
            </div>
            <hr />
            <div style="margin:20px">
                <h5>Comments @item.GifComments</h5>
                @item.GifComments
            </div>

            <div>
                @*@Html.ActionLink("Edit", "EditArticle", new { id = item.ArticleId })*@
                <a href="EditGif/@item.EmployeeGifId" class="btn btn-primary"><i class="fa fa-pencil fa-fw" aria-hidden="true"></i>Edit</a>
                <a href="DeleteGif/@item.EmployeeGifId" class="btn btn-danger"><i class="fa fa-trash fa-fw" aria-hidden="true"></i>Delete</a>
            </div>
        }

    </div>