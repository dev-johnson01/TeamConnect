<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("TeamConnect", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Login", "Signin", "Account")</li>
                    <li>@Html.ActionLink("Sign-up", "Registration", "Employee")</li>
                    <li>@Html.ActionLink("Profile", "ViewProfile", "Account")</li>

                </ul>
            </div>
            
        </div>
    </div>
    <div>
        <div class="row">
            <div class="col-md-3 side-bar-container bg-info">
                <div class="logo">

                    <img src="~/Content/images/logo.png" alt="Alternate Text" width="200" />
                    <h1>TeamConnect</h1>

                    <div class="side-bar-menu">

                        <div class="side-bar">@Html.ActionLink("Post Article", "WriteArticle", "Article")</div>
                        <div class="side-bar">@Html.ActionLink("Post gif","PostGif","Gif")</div>
                        <div class="side-bar">@Html.ActionLink("View Article", "ViewArticle", "Article")</div>


                    </div>
                </div>
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
        <hr />
        <footer class="jumbotron">
            <p>&copy; @DateTime.Now.Year - TeamConnect Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
